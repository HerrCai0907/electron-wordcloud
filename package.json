{
  "name": "electron-worldcloud",
  "version": "1.0.0",
  "description": "world cloud desktop app with electron",
  "main": "./dist/main/main.js",
  "private": true,
  "scripts": {
    "prepare": "husky install",
    "postinstall": "echo electron-builder install-app-deps",
    "build:web": "webpack -c webpack-renderer.config.js",
    "build:main": "webpack -c webpack-main.config.js",
    "build": "npm run build:web && npm run build:main",
    "watch": "webpack -c webpack-renderer.config.js -w &  webpack -c webpack-main.config.js -w",
    "pack": "electron-builder",
    "start": "electron ."
  },
  "build": {
    "appId": "com.electron.electron-worldcloud",
    "compression": "store",
    "asar": false,
    "files": [
      "./dist/main/**/*",
      "./dist/web/**/*"
    ],
    "mac": {
      "category": "your.app.category.type"
    },
    "electronDownload": {
      "mirror": "https://npm.taobao.org/mirrors/electron/"
    }
  },
  "repository": "https://gitee.com/cai_congcongcong/electron-worldcloud.git",
  "author": "Congcong Cai <congcongcai0907@163.com>",
  "license": "Apache-2.0",
  "devDependencies": {
    "@types/node": "^17.0.8",
    "@types/opentype.js": "^1.3.3",
    "@types/react": "^17.0.38",
    "@types/react-dom": "^17.0.11",
    "antd": "^4.18.3",
    "css-loader": "^6.5.1",
    "electron": "16.0.6",
    "electron-builder": "^22.14.5",
    "html-webpack-plugin": "^5.5.0",
    "husky": "^7.0.4",
    "prettier": "^2.5.1",
    "pretty-quick": "^3.1.3",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "style-loader": "^3.3.1",
    "ts-loader": "^9.2.6",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.4",
    "webpack": "^5.66.0",
    "webpack-cli": "^4.9.1"
  },
  "dependencies": {
    "color.js": "^1.2.0",
    "htmlparser2": "^7.2.0",
    "iconv-lite": "^0.6.3",
    "jschardet": "^3.0.0",
    "node-stream-zip": "^1.15.0",
    "nodejieba": "^2.6.0",
    "opentype.js": "^1.3.4",
    "pdfjs-dist": "^2.12.313"
  }
}
